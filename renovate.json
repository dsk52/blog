{
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":automergePatch"
  ],
  "schedule": [
    "every weekend"
  ],
  "baseBranches": [
    "develop"
  ],
  "labels": [
    "renovate"
  ],
  "npm": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": [
        "@types/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "linters",
      "extends": [
        "packages:linters"
      ],
      "packageNames": [
        "prettier"
      ],
      "packagePatterns": [
        "^@typescript-eslint/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "packageRules": [
        {
          "matchSourceUrlPrefixes": [
            "https://github.com/kulshekhar/ts-jest"
          ],
          "matchUpdateTypes": [
            "major"
          ],
          "groupName": "jest monorepo"
        }
      ]
    },
    {
      "matchPackageNames": [
        "react",
        "@types/react",
        "react-dom",
        "@types/react-dom"
      ],
      "groupName": "react",
      "patch": {
        "automerge": true
      }
    }
  ]
}
