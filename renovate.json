{
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":followTag(typescript, next)"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "baseBranches": [
    "develop"
  ],
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "packageRules": [
        {
          "matchUpdateTypes": [
            "patch"
          ],
          "automerge": true
        }
      ]
    },
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": [
        "@types/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "linters",
      "extends": [
        "packages:linters"
      ],
      "packageNames": [
        "prettier"
      ],
      "packagePatterns": [
        "^@typescript-eslint/"
      ],
      "patch": {
        "automerge": true
      }
    },
    {
      "matchPackageNames": [
        "react",
        "@types/react",
        "react-dom",
        "@types/react-dom"
      ],
      "groupName": "react",
      "patch": {
        "automerge": true
      }
    }
  ]
}
