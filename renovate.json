{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "baseBranches": [
    "develop"
  ],
  "labels": [
    "renovate"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "packagePatterns": [
        "^@types/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "linters",
      "extends": [
        "packages:linters"
      ],
      "packageNames": [
        "prettier"
      ],
      "packagePatterns": [
        "^@typescript-eslint/"
      ]
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
