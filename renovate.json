{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "baseBranches": [
    "develop"
  ],
  "labels": [
    "renovate"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": [
        "@types/"
      ],
      "patch": {
        "automerge": true
      }
    },
    {
      "groupName": "linters",
      "extends": [
        "packages:linters"
      ],
      "packageNames": [
        "prettier"
      ],
      "packagePatterns": [
        "^@typescript-eslint/"
      ],
      "patch": {
        "automerge": true
      }
    },
    {
      "matchPackageNames": [
        "react",
        "@types/react",
        "react-dom",
        "@types/react-dom"
      ],
      "groupName": "react",
      "patch": {
        "automerge": true
      }
    }
  ]
}
